{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/spa",
  "installCommand": "npm install",
  "framework": null,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node@2.16.1" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
