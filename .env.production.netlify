# Production Environment for Netlify
NODE_ENV=production

# Required for authentication
JWT_SECRET=YOUR_SECURE_JWT_SECRET_AT_LEAST_32_CHARACTERS_LONG

# Database (SQLite will be in /tmp for serverless)
DATABASE_URL=sqlite:/tmp/investnaija.db

# CORS Configuration
CORS_ORIGIN=https://investnaij.netlify.app

# Payment Integration (Use your live keys for production)
PAYSTACK_PUBLIC_KEY=pk_live_your_live_public_key
PAYSTACK_SECRET_KEY=sk_live_your_live_secret_key

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_KYC=true
ENABLE_INVESTMENTS=true
ENABLE_BILL_PAYMENTS=true

# Limits
MAX_DAILY_TRANSACTIONS=50
MAX_UNVERIFIED_WALLET_BALANCE=50000
MAX_INVESTMENT_AMOUNT=10000000
