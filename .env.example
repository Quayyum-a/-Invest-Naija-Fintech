# Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Choose one)
# Option 1: PostgreSQL (Recommended for production)
DATABASE_URL="postgresql://username:password@hostname:port/database"

# Option 2: Neon Database (Vercel-optimized PostgreSQL)
POSTGRES_URL="postgres://username:password@hostname:port/database"
POSTGRES_PRISMA_URL="postgres://username:password@hostname:port/database?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgres://username:password@hostname:port/database"

# Option 3: PlanetScale (MySQL-compatible)
PLANETSCALE_URL="mysql://username:password@hostname:port/database?ssl={"rejectUnauthorized":true}"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Payment Provider Configuration
PAYSTACK_SECRET_KEY="sk_test_your_paystack_secret_key"
PAYSTACK_PUBLIC_KEY="pk_test_your_paystack_public_key"
FLUTTERWAVE_SECRET_KEY="FLWSECK_TEST-your_flutterwave_secret_key"
FLUTTERWAVE_PUBLIC_KEY="FLWPUBK_TEST-your_flutterwave_public_key"

# KYC Provider Configuration
VERIFYME_API_KEY="your_verifyme_api_key"
VERIFYME_API_SECRET="your_verifyme_api_secret"
SMILE_PARTNER_ID="your_smile_partner_id"
SMILE_API_KEY="your_smile_api_key"
SMILE_API_SECRET="your_smile_api_secret"

# Email Service Configuration
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
SENDGRID_FROM_EMAIL="noreply@yourdomain.com"
SENDGRID_FROM_NAME="Your App Name"

# SMS Service Configuration
TERMII_API_KEY="your_termii_api_key"
TERMII_SENDER_ID="YourApp"

# File Upload Configuration
CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
ENCRYPTION_KEY="your-32-character-encryption-key"
CORS_ORIGIN="https://yourdomain.com,https://www.yourdomain.com"

# Application Configuration
APP_URL="https://yourdomain.com"
API_BASE_URL="https://yourdomain.com/api"
ADMIN_EMAIL="admin@yourdomain.com"

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_KYC=true
ENABLE_INVESTMENTS=true
ENABLE_BILL_PAYMENTS=true
ENABLE_CRYPTO=true
ENABLE_LOANS=true

# Monitoring and Analytics
SENTRY_DSN="your_sentry_dsn"
GOOGLE_ANALYTICS_ID="GA-your_analytics_id"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://username:password@hostname:port"

# Webhook URLs
PAYSTACK_WEBHOOK_URL="https://yourdomain.com/api/payments/paystack/webhook"
FLUTTERWAVE_WEBHOOK_URL="https://yourdomain.com/api/payments/flutterwave/webhook"
